<%= form_for(@appointment,:html => { :class =>"form-horizontal" }) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="panel panel-primary">
      <div class="panel-heading"><h3>Appointment Details</h3></div>
      <div class="panel-body">

        <div class="form-group">
          <%= f.label :doctor_id, "Doctor's Name:", class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%=f.collection_select :doctor_id,  Doctor.order(:name),:id, :name, {}, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :date, "Date of Visit:", class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%=f.date_select :date,  class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :pet, "Pet's Name:", class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%=f.text_field :pet,  :placeholder => "Pet's Name", class: 'form-control' %>
          </div>
        </div>
          <div class="form-group">
            <%= f.label :customer, "Customer's Name:", class: 'control-label col-sm-2' %>
            <div class="col-sm-4">
              <%=f.text_field :customer,:placeholder => "Customer's Name", class: 'form-control' %>
            </div>
          </div>
            <div class="form-group">
              <%= f.label :reminder, "Requires Reminder:", class: 'control-label col-sm-2' %>
              <div class="col-sm-4">
                <%=f.check_box :reminder%>
              </div>
            </div>

      <div class="form-group">
        <%= f.label :reason, "Reason for Visit:", class: 'control-label col-sm-2' %>
        <div class="col-sm-4">
          <%=f.text_area :reason,  class: 'form-control',  :rows => "6" %>
         </div>
      </div>

    </div>



        </div>
         <div style="text-align: center; margin-left:auto; margin-right: auto">
           <%= f.submit "Submit", :class=> 'btn btn-primary' %>
        </div>
<% end %>


