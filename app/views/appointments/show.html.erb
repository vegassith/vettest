<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading"><h3>Appointment Details</h3></div>
  <div class="panel-body">
    <table class="table table-striped table-bordered" cellspacing="0" width="50%">

      <tbody>

      <tr><td><strong>Appointment Date:</strong> </td><td><%= @appointment.date.to_s(:long) %></td></tr>
      <tr><td><strong>Pet's Name:</strong> </td><td><%= @appointment.pet %></td></tr>
      <tr><td><strong>Customer's Name:</strong> </td><td><%= @appointment.customer %></td></tr>
      <tr><td><strong>Requires Reminder:</strong> </td><td><%= @appointment.reminder %></td></tr>
      <tr><td><strong>Reason for Visit:</strong> </td><td><%= @appointment.reason %></td></tr>

      </tbody>
    </table>

  </div>
</div>

<div style="text-align: center;margin-left: auto;margin-right: auto">

<%= link_to 'Edit', edit_appointment_path(@appointment), :class=> 'btn btn-primary' %>
<%= link_to 'Back', appointments_path, :class=> 'btn btn-primary' %>
</div>