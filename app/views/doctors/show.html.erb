<p id="notice"><%= notice %></p>

  <div class="panel panel-primary">
    <div class="panel-heading"><h3><%= @doctor.name + "'s" %> Details</h3></div>
    <div class="panel-body">
      <table class="table table-striped table-bordered" cellspacing="0" width="50%">

        <tbody>

        <tr><td><strong>Doctor's Name:</strong> </td><td><%= @doctor.name %></td></tr>
        <tr><td><strong>Doctor's Address:</strong> </td><td><%= @doctor.address %></td></tr>
        <tr><td><strong>Doctor's City:</strong> </td><td><%= @doctor.city %></td></tr>
        <tr><td><strong>Doctor's State:</strong> </td><td><%= @doctor.state %></td></tr>
        <tr><td><strong>Doctor's Zip:</strong> </td><td><%= @doctor.zip %></td></tr>
        <tr><td><strong>School Received Degree From:</strong> </td><td><%= @doctor.school %></td></tr>
        <tr><td><strong>Years in Practice:</strong> </td><td><%= @doctor.years %></td></tr>
      </tbody>
      </table>

      </div>
    </div>


    <div style="text-align: center;margin-left: auto;margin-right: auto">
<%= link_to 'Edit', edit_doctor_path(@doctor), :class=> 'btn btn-primary' %>
<%= link_to 'Back', doctors_path, :class=> 'btn btn-primary' %>
</div>
    </div>