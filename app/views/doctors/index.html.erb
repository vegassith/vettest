<p id="notice"><%= notice %></p>


<div class="panel panel-primary">
  <div class="panel-heading"><h3>Doctor Listing</h3></div>
  <div class="panel-body">
<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Address</th>
      <th colspan="3">City</th>
      <th colspan="3">State</th>
      <th colspan="3">Zip</th>
      <th colspan="3">Degree From</th>
      <th colspan="3">Years</th>
      <th colspan="3" style="text-align: center;">View</th>
      <th colspan="3" style="text-align: center;">Edit</th>
      <th colspan="3" style="text-align: center;">Delete</th>

    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |d| %>
      <tr>
        <td colspan="3"><%=d.name %></td>
        <td colspan="3"><%=d.address %></td>
        <td colspan="3"><%=d.city %></td>
        <td colspan="3"><%=d.state %></td>
        <td colspan="3"><%=d.zip %></td>
        <td colspan="3"><%=d.school %></td>
        <td colspan="3"><%=d.years %></td>
        <td colspan="3" style="text-align: center;"><%= link_to d do %>
              <span class="glyphicon glyphicon-search"></span>
          <% end %></td>
        <td colspan="3" style="text-align: center;"><%= link_to edit_doctor_path(d.id) do %> <span class="glyphicon glyphicon-pencil"></span>
          <% end %></td>
        <td colspan="3" style="text-align: center;"><%= link_to  d, method: :delete, data: { confirm: 'Are you sure?' } do %> <span class="glyphicon glyphicon-trash"></span>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div></div>

  <div style="text-align: center;margin-left: auto;margin-right: auto">
<%= link_to 'New Doctor', new_doctor_path, class: 'btn btn-primary' %>
</div></div>